---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'PC Studios Games — Próximamente',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>

  <Hero
    actions={[
      { variant: 'primary', text: 'Ir al Blog', href: '#blog' },
      { text: 'Soporte', href: '/contact' },
    ]}
  >
    <Fragment slot="title">
      PC Studios: <span class="text-accent dark:text-white">Próximamente</span>
    </Fragment>

    <Fragment slot="subtitle">
      Estamos construyendo la plataforma definitiva para el gaming profesional.
      <br class="hidden sm:inline" />
      <span class="font-semibold italic text-primary">Prepárate para el siguiente nivel.</span>
    </Fragment>
  </Hero>

  <div id="blog">
    <BlogLatestPosts
      title="Diario de Desarrollo"
      information="Sigue nuestros avances y entérate antes que nadie de la fecha oficial de lanzamiento."
      linkText="Ver todas las noticias"
    />
  </div>

  <Features2
    title="Síguenos en nuestras redes"
    subtitle="Únete a la comunidad de PC Studios y sé el primero en conocer las novedades."
    items={[
      { title: 'YouTube', icon: 'tabler:brand-youtube', href: '#' },
      { title: 'Instagram', icon: 'tabler:brand-instagram', href: '#' },
      { title: 'Discord', icon: 'tabler:brand-discord', href: '#' },
      { title: 'TikTok', icon: 'tabler:brand-tiktok', href: '#' },
    ]}
  />

  <CallToAction
    title="¿Tienes alguna duda?"
    subtitle="Aunque estemos en desarrollo, nuestro equipo está disponible para ayudarte."
    actions={[
      {
        variant: 'secondary',
        text: 'Contactar Soporte',
        href: '/contact',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
