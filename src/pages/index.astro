---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'PC Studios Games — Próximamente',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>

  <Hero>
    <Fragment slot="title">
      PC Studios: <span class="text-accent dark:text-white">Próximamente</span>
    </Fragment>

    <Fragment slot="subtitle">
      Estamos trabajando en algo grande. La plataforma definitiva para gamers está en desarrollo.
      <br class="hidden sm:inline" />
      <span class="font-semibold">Prepárate para la nueva era del gaming profesional.</span>
    </Fragment>
  </Hero>

  <BlogLatestPosts
    title="Diario de Desarrollo"
    information="Sigue nuestros avances y entérate antes que nadie de la fecha oficial de lanzamiento."
  />
</Layout>
