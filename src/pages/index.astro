---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'PC Studios Games — Próximamente',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>

  <Hero>
    <Fragment slot="title">
      PC Studios: <span class="text-accent dark:text-white">Próximamente</span>
    </Fragment>

    <Fragment slot="subtitle">
      Estamos trabajando en algo grande. La plataforma definitiva para gamers está en desarrollo.
      <br class="hidden sm:inline" />
      <span class="font-semibold">Prepárate para la nueva era del gaming profesional.</span>
    </Fragment>
  </Hero>

  <BlogLatestPosts
    title="Diario de Desarrollo"
    information="Sigue nuestros avances y entérate antes que nadie de la fecha oficial de lanzamiento."
    linkText="Ver todas las noticias"
  />

  <section class="flex flex-col items-center justify-center py-12 border-t border-b border-gray-800 bg-page">
    <div class="flex items-center gap-6">
      <span class="text-sm font-medium uppercase tracking-widest text-gray-400">Follow us</span>
      <div class="flex gap-4">
        <a href="#" class="text-gray-400 hover:text-white transition-colors" aria-label="YouTube">
          <Icon name="tabler:brand-youtube" class="w-6 h-6" />
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors" aria-label="Instagram">
          <Icon name="tabler:brand-instagram" class="w-6 h-6" />
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors" aria-label="Discord">
          <Icon name="tabler:brand-discord" class="w-6 h-6" />
        </a>
        <a href="#" class="text-gray-400 hover:text-white transition-colors" aria-label="TikTok">
          <Icon name="tabler:brand-tiktok" class="w-6 h-6" />
        </a>
      </div>
    </div>
  </section>
</Layout>
