---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto — PC Studios',
};
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment> <HeroText tagline="Soporte" title="¡Conectemos!" />

  <ContactUs
    id="form"
    title="Déjanos un mensaje"
    subtitle="Si tienes dudas sobre un juego o tu cuenta, nuestro equipo de soporte está listo para ayudarte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label: 'Al enviar este formulario, aceptas la recopilación de tus datos personales para fines de soporte.',
    }}
    description="Nuestro equipo suele responder en menos de 24 horas hábiles."
  />

  <Features2
    title="¡Estamos aquí para ayudarte!"
    items={[
      {
        title: 'Soporte General',
        description: 'Consultas sobre gestión de cuentas, navegación o problemas con la web.',
      },
      {
        title: 'Ventas y Licencias',
        description: 'Preguntas sobre compras de juegos, reembolsos o ediciones especiales.',
      },
      {
        title: 'Soporte Técnico',
        description: 'Problemas con instalaciones, errores de descarga o compatibilidad.',
      },
      {
        title: 'Email',
        description: 'soporte@pcstudiosgames.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Comunidad',
        description: 'Únete a nuestro Discord oficial para ayuda en tiempo real.',
        icon: 'tabler:brand-discord',
      },
      {
        title: 'Ubicación',
        description: 'PC Studios Inc. — Chile',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
